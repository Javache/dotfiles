# Default tools
export EDITOR="subl -w"
export MANPAGER="col -b | bcat"

# Larger bash history (allow 32Â³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"

# Prefer US English and use UTF-8
export LANG="en_US"
export LC_ALL="en_US.UTF-8"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Always enable colored `grep` output
export GREP_OPTIONS="--color=auto"
export CLICOLOR=1

# Extend PATH
export PATH=/usr/local/sbin:$PATH
export PATH=/usr/local/bin:$PATH
export PATH=$HOME/src/devtools/arcanist/bin:$PATH
export PATH=$HOME/src/devtools/buck/bin:$PATH
export PATH=$HOME/bin:$PATH

export RBENV_ROOT=/usr/local/var/rbenv
export PYTHONPATH=/usr/local/lib/python2.7/site-packages:/Library/Python/2.7/site-packages
export NODE_PATH="/usr/local/share/npm/lib/node_modules"
export MANPATH="/usr/local/share/man:$MANPATH"
export INFOPATH="/usr/local/share/info:$INFOPATH"
export PYTHONSTARTUP="$HOME/.pystartup"
